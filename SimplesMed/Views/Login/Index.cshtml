        margin-left: 145px;
    }
</style>
<div class="container" data-bind="with: Login">

    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div class="box">
                <div class="shape1"></div>
                <div class="shape2"></div>
                <div class="shape3"></div>
                <div class="shape4"></div>
                <div class="shape5"></div>
                <div class="shape6"></div>
                <div class="shape7"></div>
                <div class="float">
                    <form class="form">
                        <div class="form-group">
                            <label for="username" style="color: #17a2b8">E-mail:</label><br>
                            <input type="text" name="email" id="email" class="form-control" data-bind="value: email">
                        </div>
                        <div class="form-group">
                            <label for="password" style="color: #17a2b8">Senha:</label><br>
                            <input type="password" name="password" id="password" class="form-control" data-bind="value: password">
                        </div>
                        <div class="form-group">
                            <button type="button" name="Entrar" class="btn btn-info btn-md" value="Entrar" data-bind="click: $root.Logar">Entrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var ScreenModel = function () {
        var self = this;
        console.log("ok");
        self.Login = new loginModel();

        self.Logar = function () {
             $.ajax({
                    url: "@Url.Action("Logar","Login")",
                    type: "POST",
                 contentType: "application/json; charset=utf-8",
                 data: ko.toJSON(self.Login),
                 cache: false,
                 success: function (data) {
                     console.log(data);
                     if (data != null) {
                         window.location.href = "@Url.Action("Index","Home")";
                     }
                     else {
                         alert("Usuário ou Senha incorretos !")
                     }
                 }
                });
        };
    };
    var loginModel = function () {
        var self = this;

        self.email = ko.observable();
        self.password = ko.observable();

    };

</script>

